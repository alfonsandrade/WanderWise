<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginScreenFragment">

    <fragment
        android:id="@+id/loginScreenFragment"
        android:name="com.wanderwise.LoginScreenFragment"
        android:label="Login"
        tools:layout="@layout/activity_login">
        <action
            android:id="@+id/action_to_tripSelection"
            app:destination="@id/tripSelectionScreenFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/tripSelectionScreenFragment"
        android:name="com.wanderwise.TripSelectionScreenFragment"
        android:label="Trip Selection"
        tools:layout="@layout/activity_trip_selection" >
        <action
            android:id="@+id/action_to_citySelection"
            app:destination="@id/citySelectionScreenFragment" />
        <action
            android:id="@+id/action_to_newTrip"
            app:destination="@id/newTripScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/newTripScreenFragment"
        android:name="com.wanderwise.NewTripFragment"
        android:label="New Trip"
        tools:layout="@layout/activity_new_trip" >
        <action
            android:id="@+id/action_to_tripSelection"
            app:destination="@id/tripSelectionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/citySelectionScreenFragment"
        android:name="com.wanderwise.CitySelectionFragment"
        android:label="City Selection"
        tools:layout="@layout/activity_city_selection" >
        <action
            android:id="@+id/action_to_attraction_selection"
            app:destination="@id/attractionSelectionScreenFragment" />
        <action
            android:id="@+id/action_to_newCity"
            app:destination="@id/newCityScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/newCityScreenFragment"
        android:name="com.wanderwise.NewCityFragment"
        android:label="New City"
        tools:layout="@layout/activity_new_city" >
        <action
            android:id="@+id/action_to_citySelection"
            app:destination="@id/citySelectionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/attractionSelectionScreenFragment"
        android:name="com.wanderwise.AttractionSelectionFragment"
        android:label="Attraction Selection"
        tools:layout="@layout/activity_attraction_selection" >
        <action
            android:id="@+id/action_to_edit_attraction"
            app:destination="@id/attractionEditingFragment" />
        <action
            android:id="@+id/action_to_new_attraction"
            app:destination="@id/newAttractionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/newAttractionScreenFragment"
        android:name="com.wanderwise.NewAttractionFragment"
        android:label="New Attraction"
        tools:layout="@layout/activity_new_attraction" >
        <action
            android:id="@+id/action_to_attraction_selection"
            app:destination="@id/attractionSelectionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/attractionEditingFragment"
        android:name="com.wanderwise.AttractionEditingFragment"
        android:label="Attraction Editing"
        tools:layout="@layout/activity_attraction_selection" >
    </fragment>
</navigation>
