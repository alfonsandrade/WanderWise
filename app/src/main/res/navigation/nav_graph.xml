<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginScreenFragment">

    <fragment
        android:id="@+id/loginScreenFragment"
        android:name="com.wanderwise.LoginScreenFragment"
        android:label="Login"
        tools:layout="@layout/activity_login">
        <action
            android:id="@+id/action_to_tripSelection"
            app:destination="@id/tripSelectionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/tripSelectionScreenFragment"
        android:name="com.wanderwise.TripSelectionScreenFragment"
        android:label="City Selection"
        tools:layout="@layout/activity_trip_selection" >
        <action
            android:id="@+id/action_to_citySelection"
            app:destination="@id/citySelectionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/citySelectionScreenFragment"
        android:name="com.wanderwise.CitySelectionFragment"
        android:label="City Selection"
        tools:layout="@layout/activity_city_selection" >
        <action
            android:id="@+id/action_to_activity_selection"
            app:destination="@id/activitySelectionScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/activitySelectionScreenFragment"
        android:name="com.wanderwise.ActivitySelectionFragment"
        android:label="Activity Selection"
        tools:layout="@layout/activity_activity_selection" >
        <action
            android:id="@+id/action_to_edit_activity"
            app:destination="@id/action_to_edit_activity" />
    </fragment>

    <fragment
        android:id="@+id/activityEditionFragment"
        android:name="com.wanderwise.ActivityEditionFragment"
        android:label="Activity Selection"
        tools:layout="@layout/activity_activity_selection" >
    </fragment>
</navigation>
