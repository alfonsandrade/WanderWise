<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVert25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVert75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


    <ImageView
        android:id="@+id/imageTripIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_login_screen"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/cityNameText"
        style="@style/EditTextStyle"
        android:textColorHint="@color/light_gray"
        android:hint="@string/city_name"
        android:inputType="textPersonName"
        android:background="@drawable/edittext_underline"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/imageTripIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/fromDate"
        style="@style/EditTextStyle"
        android:hint="@string/from_date"
        android:textColorHint="@color/light_gray"
        android:inputType="date"
        android:background="@drawable/edittext_underline"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cityNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline60"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/toDate"
        style="@style/EditTextStyle"
        android:hint="@string/to_date"
        android:textColorHint="@color/light_gray"
        android:inputType="date"
        android:background="@drawable/edittext_underline"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cityNameText"
        app:layout_constraintStart_toEndOf="@+id/guideline60"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <fragment
        android:id="@+id/autocomplete_hotel_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        style="@style/EditTextStyle"
        android:hint="@string/hotel_inn"
        android:textColorHint="@color/light_gray"
        android:inputType="textPersonName"
        android:background="@drawable/edittext_underline"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/toDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/descriptionText"
        style="@style/EditTextStyle"
        android:hint="@string/optional_description"
        android:textColorHint="@color/light_gray"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_underline"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/autocomplete_hotel_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <ImageButton
        android:id="@+id/back_button"
        style="@style/CircularButtonStyle"
        android:src="@drawable/back_arrow"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@id/confirm_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/confirm_button"
        style="@style/CircularButtonStyle"
        android:src="@drawable/verified"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>